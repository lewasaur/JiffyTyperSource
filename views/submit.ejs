<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Submit a Post
      </h1>
      <%- include('partials/messages') %>
      <form action="/submit" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            placeholder="title"
            class="form-control"
            maxlength="40"
            value="<%= typeof title != 'undefined' ? title : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="text">Text</label>
          <textarea
            rows="7"
            name="text"
            id="text"
            placeholder="text"
            class="form-control"
            maxlength="400"
            value="<%= typeof text != 'undefined' ? text : '' %>"
          > </textarea>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            row="3"
            name="description"
            id="description"
            placeholder="description"
            class="form-control"
            maxlength="40"
            value="<%= typeof description != 'undefined' ? description : '' %>"
          ></textarea>
        </div>
        <div class="form-group">
          <label for="contributor">Your name</label>
          <input
            type="text"
            name="contributor"
            id="contributor"
            placeholder="contributor"
            maxlength="20"
            class="form-control"
            value="<%= typeof contributor != 'undefined' ? contributor : '' %>"
          />
        </div>

        <div class="container">
          <div class="row">
            <div class="col">
              <a href="/" class="btn btn-secondary">BACK</a>
            </div>
            <div class="col">
            </div>
            <div class="col">
              <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
            </div>
          </div>
        </div>





      </form>
    </div>
  </div>
</div>

